---
import "../pcss/components/badge.pcss.css";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

import BaseHead from "../components/astro/BaseHead.astro";
import Header from "../components/frontpage/Header.astro";
import Footer from "../components/frontpage/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <nav>
        <ul>
          <li>
            <a class="" href="/jo-base-theme/toolkit">Toolkit info</a>
          </li>
          <li>
            <a class="" href="/jo-base-theme/docs">Documetation</a>
          </li>
          <li>
            <a class="" href="/jo-base-theme/snippets"> Snippets</a>
          </li>
        </ul>
      </nav>
    </main>

    <Footer />

    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        min-height: 100dvh;

        & > main {
          flex-grow: 1;
        }
      }
    </style>
  </body>
</html>
